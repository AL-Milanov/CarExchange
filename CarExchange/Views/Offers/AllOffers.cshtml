@model CarExchange.Core.Models.CarResponse

@{
    ViewData["Title"] = "AllOffers";
}

<h1>All Offers</h1>
<div class="row">
    @foreach (var item in Model.Cars)
    {
        <div class="card m-1" style="width:350px;">
            <a asp-action="Product" asp-route-id="@item.Id">
                <div class="card-body">
                    <img src="data:image/jpeg;base64,@item.Picture" width="300" height="300">
                    <hr>
                    <h5 class="card-title">@item.Car</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@item.Price €, @item.Mileage km.</h6>
                </div>
            </a>
        </div>
    }
</div>
<div class="dataTables_paginate paging_simple_numbers center-screen" id="example2_paginate">
    <ul class="pagination">
        <li class="paginate_button page-item previous @(Model.CurrentPage == 1 ? "disabled" : "enabled")">
            <a asp-action="All" asp-route-page="@(Model.CurrentPage - 1)" aria-controls="example2" data-dt-idx="0" tabindex="0" class="page-link">Previous Page</a>
        </li>
        @for (var i = 1; i <= Model.Pages; i++)
        {
            <li class="paginate_button page-item @(Model.CurrentPage == i ? "disabled" : "enabled")">
                <a asp-action="All" asp-route-page="@i" aria-controls="example2" data-dt-idx="1" tabindex="0" class="page-link">
                    @i
                </a>
            </li>
        }
        <li class="paginate_button page-item next @(Model.CurrentPage == Model.Pages ? "disabled" : "enabled")" id="example2_next">
            <a asp-action="All" asp-route-page="@(Model.CurrentPage + 1)" aria-controls="example2" data-dt-idx="7" tabindex="0" class="page-link">Next Page</a>
        </li>
    </ul>
</div>
