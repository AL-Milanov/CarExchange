@model CarExchange.Core.Models.CarVM

@{
    ViewData["Title"] = "Product";
}

<section class="content">
    <div class="card card-solid">
        <div class="card-body">
            <div class="row" style="display: flex; flex-wrap:wrap; margin-right: -7.5px;margin-left: -7.5px;>
                <div class="col-12 col-sm-6">
                    <div class="col-12">
                        <img src="data:image/jpeg;base64,@Model.Images[0]" width="300" height="300" />
                    </div>
                    <div class="col-12 product-image-thumbs">
                        @foreach (var image in Model.Images)
                        {
                            <div class="prouct-image-thumb">
                                <img src="data:image/jpeg;base64,@image" width="50" height="50" />
                            </div>
                        }
                    </div>
                </div>
                <div class="col-12 col-sm-6">
                    <h3>@Model.Manufacturer - @Model.Model</h3>
                </div>
            </div>
        </div>
    </div>
</section>